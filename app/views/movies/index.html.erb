<div id="container">
    <div class="container-fluid">
        <div class="row">
            <% @movies.each.with_index(@movies.offset_value + 1) do |movie, idx| %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="video-card border-dark mb-3">
                        <div class="card-header p-0">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe width="560" height="315" src="<%= movie.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="card-body text-dark movie-body">
                                <p id="watched-button-<%= movie.id %>">
                                    <%= render partial: 'watched_movies/watched_movie', locals: { movie: movie} %>
                                </p>
                                <% if params[:category].nil? %>
                                    <p class="card-text movie-title">Lv. <%= "#{idx}" %> : <%= movie.title %></p>
                                <% else %>
                                    <p class="card-text movie-title"><%= movie.title %></p>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <%= paginate @movies %>
    </div>
</div>