<div class="lesson-container">
  <div class="lesson-header">
    <h3>テキスト教材</h3>
    <%= search_form_for @q do |form| %>
      <%= form.search_field :title_cont %>
      <%= form.submit "検索" %>
    <% end %>
  </div>
  <div class="lesson-row">
    <% @texts.each do |text| %>
      <div class="lesson-card col-4">
        <a href="<%= text_path(text) %>" class="card-body rounded">
          <div class="thumbnail-enlarge">
            <%= image_tag "image.png", class: "card-img-top" %>
          </div>
          <div class="content-wrapper">
            <div class="btn btn-primary btn-block">読破済みにする</div>
            <h3 class="card-title"><%= text.title %></h5>
            <p class="card-text">【<%= text.genre %>】</p>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>