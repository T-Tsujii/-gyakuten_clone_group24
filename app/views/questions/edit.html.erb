<div class="container">
    <h2>投稿内容の編集</h2>
    <%= form_with model: @question, local: true do |form| %>
    <%= render "layouts/error" %>
    <div class="form-group">
    <%= form.label :title, "【質問】" %>
    <%= form.text_area :title, class: "form-control", rows: "3" %>
    </div>
    <div class="form-group">
    <%= form.label :detail, "【詳細】" %>
    <%= form.text_area :detail, class: "form-control", rows: "5" %>
    </div class="form-group">
    <%= form.submit "送信", class: "btn btn-primary btn-block" %>
    <% end %>
</div>